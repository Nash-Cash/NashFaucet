extends ./template.pug

block tabs
	li.is-active
		a.is-active(href="/") Faucet
	li
		a(href="/cooldowns") Cooldowns
	li
		a(href="/about") About
	li
		a(href="https://paper.nashcash.net" target="_blank") PaperWallet
	
block body
	script(src='https://www.google.com/recaptcha/api.js', async='', defer='')															//recaptcha
		p You will recieve between #{locals.minCoins} #{locals.ticker} and #{locals.maxCoins} #{locals.ticker}!

		br

	div.notification.is-info
		p Please note that you can only claim coins every #{locals.claimableEvery}.

	form#sendcoins(action="/claimCoins", method="post")
	
		input.input(type="text", name="address", placeholder=coinWalletDescription)

		br
		br

		button.btn.btn-default.g-recaptcha(data-sitekey="--your site key--", data-callback="onSubmit") Submit 							//recaptcha on button

	script.																																
		function onSubmit(token) {																										//recaptcha execute
		document.getElementById("sendcoins").submit();}



		



